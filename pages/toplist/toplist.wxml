<view class='toplist'>
  <view class='wrap'>
    <view class='item' wx:for="{{topList}}" wx:key="{{item.id}}">


      <view class='cover_img'>
        <image src="{{item.picUrl}}"></image>
        <view class='lis_num'>
          <text class='iconfont icon-erji'></text>
          <text>{{item.listenCount}}</text>
        </view>
      </view>


      <view class='desc'>
        <view class='title'>{{item.topTitle}}</view>
        <view class='third'>
          <view class='third_item' wx:for="{{item.songList}}" wx:for-index="idx" wx:for-item="song" wx:key="{{song.songname}}">
            {{idx + 1}}
            <text>{{song.songname}} - {{song.singername}}</text>
          </view>
        </view>
      </view>
    </view>


  </view>
</view>