.song_sheet .info_wrap .info .play_start{
  width: 100%;
  padding: 15px 0;
}


.song_sheet .info_wrap .info .play_start button{
  display: block;
  width: 45%;
  margin: 0 auto;
}

.song_sheet .info_wrap .info .play_start.fix{
  position: fixed;
  top:0;
  background-color: #777;
}
.song_sheet .info_wrap .info .play_start .control{
  display: flex;
  align-items: center;
}
.song_sheet .info_wrap .info .play_start .control .iconfont{
  color: #31c27c;
  font-size: 88rpx;
  margin-left: 40rpx;
}

.song_sheet .info_wrap .info .play_start .control .name{
  color: #fff;
  font-size: 28rpx;
  margin-left: 20rpx;
}


.song_sheet .song_list .song_list_wrap{
  width: 90%;
  margin: 30rpx auto;
}

.song_sheet .song_list .song_list_wrap .title{
  display: flex;
  justify-content: space-between;
  color: #777;
  font-size: 28rpx;
}


.song_sheet .song_list .song_list_wrap .title .like text{
  color: #31c27c;
}


.song_sheet .song_list .song_list_wrap .list .item{
  padding: 30rpx 0;
}

.song_sheet .song_list .song_list_wrap .list .item text{
  display: block;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
}

.song_sheet .song_list .song_list_wrap .list .item .desc{
  font-size: 28rpx;
  color: #777;
}

.song_sheet .song_list .song_list_wrap .to_bottom{
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #777;
}