.song_sheet .info_wrap{
position: relative;
width: 100%;
}
.song_sheet .info_wrap .info{
  position: relative;
  z-index: 1;
  padding: 30rpx 0;
  padding-bottom: 0;
  background-color: rgba(0,0,0,.5);
  color: #fff;
}

.song_sheet .info_wrap .pic_cover{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 310rpx;
    filter: blur(30rpx);
}
.song_sheet .info_wrap .info .top{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.song_sheet .info_wrap .info .top .cover_img{
  width: 33%;
  height: 250rpx;
}
.song_sheet .info_wrap .info .top .cover_img image{
  width: 100%;
  height: 100%;
}

.song_sheet .info_wrap .info .top .text{
  width: 55%;
  font-size: 28rpx;
}

